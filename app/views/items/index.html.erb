<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th>Condition</th>
      <th>Description</th>
      <th>By:</th>
      <% if user_signed_in? %>
      <th></th>
      <th></th>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= image_tag item.photo.url(:thumb) %></td>
        <td><%= item.condition %></td>
        <td><%= item.description %></td>
        <td><%= item.created_by.email %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

